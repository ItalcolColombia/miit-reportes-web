# Variables de entorno para Docker
# Copiar a .env antes de ejecutar docker-compose

# === Variables de Build (se inyectan durante npm run build) ===
# URL de la API del backend
VITE_API_BASE_URL=https://api.tu-dominio.com/api/v1

# Nombre de la aplicacion
VITE_APP_NAME=MIIT Reportes

# Version de la aplicacion
VITE_APP_VERSION=1.0.0

# Ambiente (production, staging, development)
VITE_APP_ENV=production

# === Variables de Runtime (para nginx) ===
# Puerto donde se expondra la aplicacion web
WEB_PORT=80

# URL del backend (solo si usas proxy en nginx)
API_BACKEND_URL=http://backend:8000

# Version de la imagen Docker
APP_VERSION=latest
